{
  "name": "jotai-molecules",
  "description": "A tiny, fast, dependency-free 1.18kb library for creating jotai atoms in a way that lets you lift state up, or push state down.",
  "version": "1.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/jotai-molecules.esm.js",
  "typings": "dist/index.d.ts",
  "author": "logvol",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16",
    "jotai": ">=1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {},
  "size-limit": [
    {
      "path": "dist/jotai-molecules.cjs.production.min.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/jotai-molecules.esm.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addons": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-loader": "^8.2.4",
    "husky": "^7.0.4",
    "jotai": ">=1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hooks-testing-library": "^0.6.0",
    "react-is": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
